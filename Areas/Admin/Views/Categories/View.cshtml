@model CategoriesModel
@{
    ViewData["Title"] = "View";
}

<h1>View Category</h1>
<hr />
<form>
    <div class="border whitebg p-5">
        

        <div class="row form-group">
            <div class="col-3">
                <h4><label asp-for="Name" class="col-form-label"></label></h4>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3"></div>
            <div class="col-5">
                <div class="row">
                    <div class="col-md-6">
                        <a type="submit" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success form-control">Edit Category</a>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-info form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
